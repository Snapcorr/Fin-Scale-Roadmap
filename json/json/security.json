{
  "auth": {
    "required": true,
    "method": "token",
    "token_lifetime": "24h",
    "2fa": true,
    "encryption": "AES-256"
  },
  "access_control": {
    "admin": ["read", "write", "deploy", "delete"],
    "developer": ["read", "write"],
    "viewer": ["read"]
  },
  "api_security": {
    "rate_limit": "1000/hour",
    "ip_whitelist": ["127.0.0.1"],
    "log_requests": true,
    "error_masking": true
  },
  "data_protection": {
    "encryption_in_transit": true,
    "encryption_at_rest": true,
    "backup_policy": "daily",
    "retention": "30 days"
  },
  "audit": {
    "enabled": true,
    "log_level": "verbose",
    "storage": "logs/security_audit.log"
  }
}
